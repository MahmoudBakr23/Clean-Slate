<div class="container-fluid home p-0">
    <% @articles.by_most_recent.each do |article| %>
        <% if article.likes.count == @max %>
        <div class="row w-100 m-0">
            <div class="col-lg-12 home-cont p-0">
                <%= image_tag article.image, class: "most_voted_img img-fluid" %>
                <div class="relative">
                    <div class="d-flex justify-content-between align-items-center">
                        <%= link_to article.title, article_path(article), class: "article_link ml-3 mb-3" %>
                        <h6 class="m-0 vote mr-3 mb-3"><%= like_and_unlike(article) %> <%= count_votes(article) %></h6>
                    </div>
                    <div class="my-1 mx-3 d-flex justify-content-between align-items-center">
                        <small class="text-white mb-2">Posted at:<br/><%= article.created_at %></small>
                        <%= link_to  article.author.name, user_path(article.author), class: "text-white" %>
                    </div>
                </div>
            </div>
            <!-- <div class="col-lg-4 p-0 text-center bg-dark text-white">
                <h1>Top Authors</h1>
            </div> -->
        </div>
        <% end %>
    <% end %>
    <div class="row w-100 m-0">
        <% @categories.each do |cat| %>
            <% @articles.each do |a| %>
                <% if cat.articles.last == a %>
                    <div class="col-lg-3 col-md-6 category p-0">
                        <div class="d-flex flex-column position-absolute odd py-4">
                            <div class="name">
                                <%= link_to  cat.name, category_path(cat), class: "text-uppercase font-weight-bold text-white" %>
                            </div>
                            <div class="title">
                                <%= link_to  a.title, article_path(a), class: "text-white" %>
                            </div>
                        </div>
                        <%= image_tag a.image, class: "img-fluid" %>
                    </div>
                <% end %>
            <% end %>
        <% end %>
    </div>
</div>