<div class="container my-5">
    <h1>Log In</h1>
    <%= form_for(:sessions, url: login_path) do |f| %>
        <div class="form-group">
            <%= f.label :name, "Name" %>
            <%= f.text_field :name, class: "form-control" %>
        </div>
        <%= f.submit "Login", class: "btn btn-primary mb-1" %>
    <% end %>
    <%= link_to  "Don't have account? Sign Up", sign_up_path %>
</div>